<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.idocnet.inos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.activity.CreateConversationActivity"></activity>
        <activity android:name=".view.activity.CreateGroupActivity" />
        <activity android:name=".view.activity.UserInfoActivity" />
        <activity android:name=".view.activity.MessengerPrivateActivity" />
        <activity android:name=".view.activity.AllContactActivity" />
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.BaseMenuActivity" />
        <activity android:name=".view.activity.AddParticipantsActivity" />
        <activity android:name=".view.activity.AddInfoActivity" />
        <activity android:name=".view.activity.RepeatActivity" />
        <activity android:name=".view.activity.RemindActivity" />
        <activity android:name=".view.activity.NotificationActivity" />
        <activity android:name=".view.activity.BeforeEventActivity" />
        <activity android:name=".view.activity.EndActivity" />
        <activity android:name=".view.activity.ChooseColorActivity" />
        <activity android:name=".view.activity.VisibilityActivity" />
        <activity android:name=".view.activity.EventTypeActivity" />
        <activity android:name=".view.activity.SettingMessageActivity" />
    </application>

</manifest>